<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeStoreApp.MainPage"
       xmlns:views="clr-namespace:BikeStoreApp.Views"
       Shell.FlyoutBehavior="Flyout"
       Shell.TabBarIsVisible="False">
    <Shell.FlyoutHeader >
        <Image Source="dotnet_bot.png" HeightRequest="150"></Image>
    </Shell.FlyoutHeader>
    <Shell.FlyoutFooter>
        <Image Source="dotnet_bot.png" HeightRequest="150"/>
    </Shell.FlyoutFooter>
    <FlyoutItem Title="Services" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Title="Home"/>
        <ShellContent ContentTemplate="{DataTemplate views:BikesPage}" Title="Bikes" />
    </FlyoutItem>    

</Shell>
